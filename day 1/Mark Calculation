#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    char str[20];
    int m1,m2,m3,m4,m5;
    gets (str);
    scanf("%d %d %d %d %d",&m1, &m2, &m3, &m4, &m5);
    printf("Name of the Student:%s\n",str);
    printf("Total marks:%d\n",m1+m2+m3+m4+m5);
    
    float a = m1+m2+m3+m4+m5;
    printf("Average marks:%.1f\n",a/5);
    return 0;
}
