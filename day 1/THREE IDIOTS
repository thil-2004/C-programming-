#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() { double x1, y1, x2, y2,x,y;
    scanf("%lf %lf %lf %lf", &x1, &y1, &x2, &y2);
    x = (x1 + x2) / 2.0;
    y = (y1 + y2) / 2.0;
    printf("Binoy's house is located at (%.1f,%.1f)\n", x, y);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
